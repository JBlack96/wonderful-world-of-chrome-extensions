{
    "name": "Hello World",
    "description": "The most basic extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "hello.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content-script.js"],
            "run_at": "document_start"
        }
    ],
    "devtools_page": "devtools.html"
  }